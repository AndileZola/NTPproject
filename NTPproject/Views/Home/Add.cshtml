@model NTPproject.Models.vmCalculator

@{
    ViewData["Title"] = "Add";
}
<h4>Add New Calculator</h4>
<hr />
<form method="post" asp-controller="Home" asp-action="Add" enctype="multipart/form-data">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Calc.CalculatorName" class="control-label"></label>
            <input asp-for="Calc.CalculatorName" class="form-control" />
            <span asp-validation-for="Calc.CalculatorName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Calc.Model" class="control-label"></label>
            <input asp-for="Calc.Model" class="form-control" />
            <span asp-validation-for="Calc.Model" class="text-danger"></span>
        </div>        
        <div class="form-group col-md-6">
            <label asp-for="Calc.Price" class="control-label"></label>
            <input asp-for="Calc.Price" class="form-control" />
            <span asp-validation-for="Calc.Price" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Image" class="control-label"></label>
            <input type="file" asp-for="Image" class="form-control"/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="SUBMIT" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
